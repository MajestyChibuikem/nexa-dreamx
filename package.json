{
   "scripts": {
    "build:css": "npx tailwindcss -i ./static/css/input.css -o ./static/css/styles.css --watch",
    "build:css:prod": "npx tailwindcss -i ./static/css/input.css -o ./static/css/styles.css --minify",
    "dev": "concurrently \"source venv/bin/activate && python manage.py runserver\" \"npm run build:css\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  }
}
